# Admin Panel .htaccess
# Allow all PHP files in admin directory

<FilesMatch "\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Allow access to assets
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
